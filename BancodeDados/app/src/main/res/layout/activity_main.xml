<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="42dp"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="NAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/editTextID" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="66dp" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView3" android:layout_marginBottom="64dp"/>
    <TextView
            android:text="GALAXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/editTextGalaxy" android:layout_marginStart="16dp"/>
    <TextView
            android:text="TYPE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/editTextType" android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextName"
            android:hint="Name" app:layout_constraintStart_toStartOf="@+id/editTextID" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextID"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextID"
            android:hint="ID" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextGalaxy"
            android:hint="Galaxy" app:layout_constraintStart_toStartOf="@+id/editTextType"
            android:layout_marginStart="1dp" android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextType"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextType"
            android:hint="Type" app:layout_constraintTop_toTopOf="@+id/editTextName"
            android:layout_marginTop="118dp" android:layout_marginStart="28dp"
            app:layout_constraintBottom_toBottomOf="@+id/buttonInsert"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginBottom="115dp"/>
    <Button
            android:text="Insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonInsert"
            app:layout_constraintTop_toTopOf="@+id/buttonUpdate" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/buttonUpdate"/>
    <Button
            android:text="Update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonUpdate"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="236dp"/>
    <Button
            android:text="Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDelete"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="29dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonInsert"/>
    <Button
            android:text="View All"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonViewAll" android:layout_marginTop="29dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonUpdate" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>